Object subclass: #Story	instanceVariableNames: 'title content'	classVariableNames: 'AllStories'	package: 'StoryApp'!!Story methodsFor: 'accessing' stamp: '4/10/2025 19:04'!title    ^ title.! !!Story methodsFor: 'accessing' stamp: '4/10/2025 19:04'!title: aString    title := aString.! !!Story methodsFor: 'accessing' stamp: '4/10/2025 19:04'!content    ^ content.! !!Story methodsFor: 'accessing' stamp: '4/10/2025 19:04'!content: aString    content := aString.! !"-- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- "!Story class	instanceVariableNames: ''!!Story class methodsFor: 'accessing' stamp: '4/10/2025 19:00'!all    ^ AllStories.! !!Story class methodsFor: 'class initialization' stamp: '4/10/2025 19:00'!initialize    AllStories := OrderedCollection new.! !!Story class methodsFor: 'adding' stamp: '4/10/2025 19:01'!add: aStory    AllStories add: aStory.! !WAComponent subclass: #StoryCreateComponent	instanceVariableNames: 'title content'	classVariableNames: ''	package: 'StoryApp'!!StoryCreateComponent methodsFor: 'rendering' stamp: '4/10/2025 19:10'!renderContentOn: html    html heading: 'Create a New Story'.    html form: [        html text: 'Title:'.        html textInput            value: title;            callback: [ :value | title := value ].        html break.        html text: 'Content:'.        html textArea            value: content;            callback: [ :value | content := value ].        html break.        html submitButton            text: 'Create';            callback: [ self createStory ].    ].! !!StoryCreateComponent methodsFor: 'actions' stamp: '4/10/2025 19:10'!createStory    | story |    story := Story new.    story title: title.    story content: content.    Story add: story.    self inform: 'Story created: ', story title.    title := ''.    content := ''.! !Story initialize!